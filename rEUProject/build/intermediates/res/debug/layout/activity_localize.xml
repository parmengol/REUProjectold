<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/image_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/image_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Map!" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_localize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="localizeNow"
        android:text="@string/btn_localize" />

</LinearLayout><!-- From: file:/home/aquallut/StudioProjects/REUProject/rEUProject/src/main/res/layout/activity_localize.xml -->